<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvProfaniTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Guess The Profanity"
            android:textSize="20dp" />
            "
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvProfaniWord"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSemiResResults"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Derp!" />

            <TextView
                android:id="@+id/tvProfaniDerp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp" >

                <EditText
                    android:id="@+id/etProfaniGuess"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.04"
                    android:ems="10"
                    android:hint="Guess"
                    android:inputType="none" >

                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/bProfaniGuess"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:text="Press to guess" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvProfDefDefinition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Lives Remaining" />

            <TextView
                android:id="@+id/tvProfaniLives"
                android:layout_width="96dp"
                android:layout_height="44dp"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="40dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/bProfaniDefine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Define" />

                <Button
                    android:id="@+id/bProfaniNewWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Profanity" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvProfaniInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
